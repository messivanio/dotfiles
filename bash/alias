#!/bin/bash

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias an='ansible'
alias ap='ansible-playbook'
alias be='bundle exec'
alias bec='bundle exec cucumber'
alias beg='bundle exec guard'
alias bi='bundle install'
alias bu='bundle update'
alias c='cd ~/code'
alias cancel-git-merge='git reset --hard HEAD'
alias cls='clear'
alias d='docker'
alias dc='docker-compose'
alias de='docker exec -it'
alias deploy-to-heroku='git push heroku master && heroku run rake db:migrate'
alias docker-ip='docker-machine env default | grep DOCKER_HOST'
alias docker-remove-all-containers-and-images='docker rm -f $(docker ps -a -q) || docker rmi -f $(docker images -q)'
alias docker-remove-dangling-images='docker images --quiet --filter=dangling=true | xargs docker rmi'
alias docker-remove-dangling-volumes='docker volume rm `docker volume ls -q -f dangling=true`'
alias ds='docker service'
alias e='exit'
alias g='git'
alias ga='git add'
alias gd='git diff'
alias gs='git status'
alias gcm='git commit -m '
alias gco='git checkout'
alias gcob='git checkout -b'
alias git-unstage='git unstage = reset HEAD --'
alias glog='git log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative'
alias gpl='git pull'
alias gps='git push'
alias gpsh='git push'
alias grep='grep -n --color'
alias jn='jupyter notebook'
alias la='ls -lhaFpT'
alias lt='la -t'
alias lz='la -S'
alias o='cd ~/ops'
alias python-http-server='python -m SimpleHTTPServer'
alias r='bin/rails'
alias rk='bin/rake'
alias rdm='bin/rake db:migrate'
alias rgm='rails g migration'
alias reload-dotfiles='source ~/dotfiles/bash/.bashrc'
alias s='ssh'
alias todo='grep -RIi TODO: *'
alias tf='terraform'
alias v='vagrant'
alias vd='vagrant destroy'
alias vs='vagrant snapshot'
alias vu='vagrant up'
alias vus='vagrant up && vagrant ssh'
alias w='cd ~/workspace'

case $(uname) in
  Linux)  
		alias open-ports='sudo netstat -tulpn | grep LISTEN'
		alias subl='/usr/bin/subl -a'
		alias update-ubuntu='sudo apt-get update; sudo apt-get upgrade; sudo apt-get dist-upgrade'
		alias install-bash-completion='sudo apt-get install bash-completion'
		;;
  Darwin) 
		alias start-docker="bash --login '/Applications/Docker/Docker Quickstart Terminal.app/Contents/Resources/Scripts/start.sh'"
		alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl -a'
		alias xcode-install-command-line-tools='xcode-select --install'
		alias screensaver='open -a /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app'
		alias install-bash-completion='brew install bash-completion && brew tap homebrew/completions'
		;;
esac
